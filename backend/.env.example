# Example environment variables for backend (safe to commit)
# Copy this file to backend/.env and fill in real values (do NOT commit backend/.env)

PORT=3000

# Postgres DB connection
DB_USER=postgres
DB_PASSWORD=__PUT_DB_PASSWORD_HERE__
DB_HOST=localhost
DB_DATABASE=__PUT_DB_NAME_HERE__
DB_PORT=5432

JWT_SECRET=__PUT_STRONG_JWT_SECRET_HERE__

# Firebase
FIREBASE_PROJECT_ID=bigezolite
FIREBASE_API_KEY=__PUT_FIREBASE_API_KEY_HERE__
FIREBASE_AUTH_DOMAIN=__PUT_FIREBASE_AUTH_DOMAIN_HERE__
FIREBASE_STORAGE_BUCKET=__PUT_FIREBASE_STORAGE_BUCKET_HERE__
FIREBASE_MESSAGING_SENDER_ID=__PUT_FIREBASE_MESSAGING_SENDER_ID_HERE__
FIREBASE_APP_ID=__PUT_FIREBASE_APP_ID_HERE__
FIREBASE_MEASUREMENT_ID=__PUT_FIREBASE_MEASUREMENT_ID_HERE__

ALLOW_REAL_SMS=false

# If you want to initialize firebase-admin from env, either set FIREBASE_SERVICE_ACCOUNT
# to the full service account JSON (stringified), or set the following three vars.
# IMPORTANT: When pasting the private key here, replace real newlines with \n so the
# value is a single-line string. Example:
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANB ... KEY CONTENT ... \n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=service-account@your-project.iam.gserviceaccount.com
